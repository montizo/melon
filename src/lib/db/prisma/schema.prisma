generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  username     String  @unique
  email        String  @unique
  passwordHash String
  verifyCode   String?
  isVerified   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
